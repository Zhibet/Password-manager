<div class="row d-flex flex-column">
    <div class="col-10 col-md-4 mx-auto mt-5">
        <form action="/search" method="get">
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="floatingInput" placeholder="example.com" name="website" required>
                <label for="floatingInput">Website Search</label>
            </div>
            <div class="d-flex justify-content-center">
                <button class="btn btn-danger">Search</button>
            </div>
        </form>
    </div>

    <!-- Display password data if found -->
    <% if (passwordData) { %>
        <div class="col-10 col-md-6 mx-auto mt-3">
            <div class="text-center">
                <p><strong><%= passwordData.website %> Password:</strong>
                    <% if (SignedIn) { %>  <!-- Show password if authenticated -->
                        <%= passwordData.password %>
                    <% } else { %>  <!-- Hide password if not authenticated -->
                        <a href="/login"><em>Sign in to view the password</em></a>
                    <% } %>
                </p>
            </div>
        </div>
    <% } %>
</div>
