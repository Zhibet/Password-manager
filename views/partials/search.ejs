<div class="row d-flex flex-column">
    <div class="col-md-6 mx-auto m-3">
        <h2 class="text-center">Password Manager</h2>
    </div>
    <div class="col-10 col-md-4 mx-auto">
        <form action="/search" method="get">
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="floatingInput" placeholder="name@example.com" name="website"> <!-- Add name attribute -->
                <label for="floatingInput">Website Search</label>
            </div>
            <div class="d-flex justify-content-center">
                <button class="btn btn-danger">Search</button>
            </div>
        </form>
    </div>

    <% if (passwordData) { %>
        <div class="col-10 col-md-6 mx-auto mt-4">
            <div class="alert text-center">
                <p><strong><%= passwordData.website %> Password:</strong> <%= passwordData.password %></p>
            </div>
        </div>
        <% } %>
</div>